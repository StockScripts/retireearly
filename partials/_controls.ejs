<form class="controls">
  <div class="control">
    <label for="start_year_num">I am about</label>
    <input type="number" data-parse="int" name="start_year" id="start_year_num" min="0" max="120" step="1" value="0" aria-describedby="start_year_num_unit start_year_num_desc">
    <span hidden class="unit" id="start_year_num_unit"></span>
    <span class="desc" id="start_year_num_desc">years old</span>
    <input type="range" data-parse="int" name="start_year" id="start_year_range" min="0" max="60" step="1" value="0">
  </div>

  <div class="control">
    <label for="initial_investment_num">I will start saving with</label>
    <input type="number" data-parse="int" name="initial_investment" id="initial_investment_num" min="0" max="" step="1" value="0" aria-describedby="initial_investment_num_unit initial_investment_num_desc">
    <span class="unit" id="initial_investment_num_unit">€</span>
    <span class="desc" id="initial_investment_num_desc"></span>
    <input type="range" data-parse="int" name="initial_investment" id="initial_investment_range" min="0" max="10000" step="100" value="0">
  </div>

  <div class="control">
    <label for="monthly_investment_num">I will save</label>
    <input type="number" data-parse="int" name="monthly_investment" id="monthly_investment_num" min="0" max="" step="1" value="0" aria-describedby="monthly_investment_num_unit">
    <span class="unit" id="monthly_investment_num_unit">€</span>
    <span class="desc" id="monthly_investment_num_desc">every month</span>
    <input type="range" data-parse="int" name="monthly_investment" id="monthly_investment_range" min="0" max="1000" step="10" value="0">
  </div>

  <div class="control">
    <label for="end_year_num">I will save until I am</label>
    <input type="number" data-parse="int" name="end_year" id="end_year_num" min="0" max="120" step="1" value="0" aria-describedby="end_year_num_unit">
    <span hidden class="unit" id="end_year_num_unit"></span>
    <span class="desc" id="end_year_num_desc">years old</span>
    <input type="range" data-parse="int" name="end_year" id="end_range_num" min="25" max="80" step="1" value="0">
  </div>

  <div class="control">
    <label for="interest_rate_num">I hope to get at least</label>
    <input type="number" data-parse="float" name="interest_rate" id="interest_rate_num" min="0" max="100" step="0.01" value="0" aria-describedby="interest_rate_num_unit_1 interest_rate_num_unit">
    <span class="unit" id="interest_rate_num_unit">%</span>
    <span class="desc" id="interest_rate_num_desc">annual growth</span>
    <input type="range" data-parse="float" name="interest_rate" id="interest_rate_range" min="2" max="12" step="0.1" value="0">
  </div>

  <div class="control">
    <label for="total_expense_ratio_num">I might lose</label>
    <input type="number" data-parse="float" name="total_expense_ratio" id="total_expense_ratio_num" min="0" max="30" step="0.01" value="0" aria-describedby="total_expense_ratio_unit">
    <span class="unit" id="total_expense_ratio_unit">%</span>
    <span class="desc" id="total_expense_ratio_unit">growth to expenses</span>
    <input type="range" data-parse="float" name="total_expense_ratio" id="total_expense_ratio_range" min="0" max="6" step="0.01" value="0">
  </div>

  <div class="control">
    <label for="monthly_usage_num">
      Finally, I'd like to use
    </label>
    <input type="number" data-parse="int" name="monthly_usage" id="monthly_usage_num" min="0" max="" step="1" value="0" aria-describedby="monthly_usage_num_unit monthly_usage_num_desc">
    <span class="unit" id="monthly_usage_num_unit">€</span>
    <span class="desc" id="monthly_usage_num_desc">a month</span>
    <input type="range" data-parse="int" name="monthly_usage" id="monthly_usage_range" min="0" max="5000" step="100" value="0">
  </div>

  <div class="control">
    <button type="reset" id="reset">Reset</button>
  </div>

</form>
